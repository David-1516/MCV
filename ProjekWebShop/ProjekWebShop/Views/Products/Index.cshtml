@model List<Product>

    <h4>Svi proizvodi</h4>
    <table class="table">
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Cijena</th>
            <th></th>
        </tr>
    @foreach (var product in Model)
    {

        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td > <button class="btn btn-close"></button></td>
        </tr>
        <tr>
            <td>

            @foreach ( var imag in product.ProductImages)
            {
                <img src ="/images/@imag.ImagePath" width="80" height="80" />
            }
            </td>
        </tr>
    }
    
</table>
<a href="/Products/Create" class="btn btn-dark">Dodaj</a>